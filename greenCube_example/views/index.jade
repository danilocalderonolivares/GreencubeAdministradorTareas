doctype html
html
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    
    
  body
    header
      h1 Administrador de tareas
       hr
    div.col-xs.8.col-xs-offset-2
        h2.text-center Ingresa una tarea
        form().container.mainForm
          div.form-group
            h5 Título de la tarea :
            input(type="text",placeholder="Nueva tarea", id="txtTask",autofocus).form-control
          div
            button(onclick='addTask()',id="btnAddTask").btn.btn-success Agregar Tarea
          br
          table(id="table").table.table-bordered.costunTable
            thead.thead-inverse
              tr
                th#num Número
                th Título de la tarea
                  
            tbody
                - for(i=0;i <taskList.length;i++){
                tr
                  td=i+1
                  td=taskList[i].task
                   a(href="delete/"+taskList[i]._id).btn-sm.btn.btn-danger.float-right Eliminar
      
                - }
                
    script(src="/javascripts/jquery-3.2.1.min.js")
    script(src="https://unpkg.com/sweetalert/dist/sweetalert.min.js")
    script(src='/javascripts/logicInterfaceTasks.js')
    
          
    
    
    
  
